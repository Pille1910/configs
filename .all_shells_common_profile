
# ---------------------------------- PATH -----------------------------------

export PATH="$PATH:$HOME/bin"


# --------------------------------- locale ----------------------------------

export LANGUAGE='en_US:en_GB'
export LC_ALL='en_US.UTF-8'
export LC_MEASUREMENT='en_DE.UTF-8',
export LC_NUMERIC='en_US.UTF-8',
export LC_TIME='en_GB.UTF-8',
export LC_PAPER='de_DE.UTF-8',
export LC_MONETARY='en_DE.UTF-8',
export LC_TELEPHONE='de_DE.UTF-8',
export LC_COLLATE='de_DE.UTF-8',
export LANG='en_US.UTF-8'


# ----------------------------------- env -----------------------------------

which joe &>/dev/null
if [ $? -ne 0 ]; then
    export EDITOR=joe
else
    export EDITOR=nano
fi

export VISUAL=$EDITOR


# -------------------------------- dircolors --------------------------------

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors \
        && eval "$(dircolors -b ~/.dircolors)" \
        || eval "$(dircolors -b)"

    alias ls='ls --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi


# -------------------------------- ssh-agent --------------------------------

eval "$(ssh-agent)" &>/dev/null

if [ $? -ne 0 ]; then
    export SSH_AUTH_SOCK=$HOME/.ssh/ssh-agent.$HOSTNAME.sock

    ssh-add -l 2>/dev/null >/dev/null
    if [ $? -ge 2 ]; then
        ssh-agent -a "$SSH_AUTH_SOCK" >/dev/null
    fi
fi


# ------------------------------- shorthand ---------------------------------

alias diff='diff -u'

alias k=kdevelop

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias term='terminator'
alias shell='term'
alias term-proj='term -l proj'
alias term-work='term -l work'


# ---------------------- compressed archive extractor -----------------------

archive-extractor ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1   ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via $0" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

alias ex=archive-extractor


# ----------------------------- embedded > avr ------------------------------

# espressif (esp32)
IDF_PATH=/opt/esp-idf
export PATH="$PATH:$IDF_PATH/tools"
